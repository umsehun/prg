{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/renderer/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@main/*": [
        "./src/main/*"
      ],
      "@renderer/*": [
        "./src/renderer/*"
      ],
      "@preload/*": [
        "./src/preload/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx",
    "src/renderer/types/**/*.d.ts",
    "src/renderer/**/*.d.ts",
    "src/types/**/*.d.ts",
    "src/shared/**/*.ts",
    "src/preload/**/*.ts",
    "src/main/**/*.ts",
    "../shared/**/*.ts",
    "next.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "src/renderer/out",
    "src/renderer/out/**",
    "../renderer/out",
    "../renderer/out/**",
    ".next",
    "**/*.test.*",
    "**/*.spec.*",
    "coverage",
    "prisma/migrations",
    "scripts",
    "debug-scripts",
    "test",
    "**/*.config.js",
    "**/*.config.mjs"
  ]
}