{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "downlevelIteration": true,
        "noEmit": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "tsBuildInfoFile": "./tsconfig.main.tsbuildinfo",
        "allowImportingTsExtensions": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/renderer/**/*",
        "node_modules",
        "dist",
        ".next"
    ]
}