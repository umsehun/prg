{
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": true
    },
    "github.copilot.advanced": {
        "length": 500,
        "temperature": 0.1,
        "top_p": 1,
        "stops": {
            "*": [
                "\n\n\n"
            ]
        }
    },
    "github.copilot.chat.localeOverride": "ko",
    "github.copilot.chat.welcomeMessage": "disabled",
    "github.copilot.chat.summarizeAgentConversationHistory.enabled": false
}