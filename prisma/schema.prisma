// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String   @id @default(cuid())
  username    String   @unique
  displayName String?
  email       String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  scores Score[]
  
  @@map("users")
}

model Chart {
  id           String   @id @default(cuid())
  title        String
  artist       String
  difficulty   String
  bpm          Float
  duration     Float    // in seconds
  audioPath    String
  backgroundPath String?
  chartData    String   // JSON string of chart data
  hash         String   @unique // for integrity checking
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  scores Score[]
  
  @@map("charts")
}

model Score {
  id           String   @id @default(cuid())
  score        Int
  accuracy     Float    // 0.0 to 1.0
  maxCombo     Int
  perfectHits  Int      @default(0)
  greatHits    Int      @default(0)
  goodHits     Int      @default(0)
  missHits     Int      @default(0)
  mods         String   @default("[]") // JSON array of mods
  playedAt     DateTime @default(now())
  
  // Foreign keys
  userId       String
  chartId      String
  
  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chart        Chart    @relation(fields: [chartId], references: [id], onDelete: Cascade)
  
  @@map("scores")
  @@index([userId])
  @@index([chartId])
  @@index([score])
  @@index([playedAt])
}

model Settings {
  id        String   @id @default("default")
  data      String   // JSON string of settings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("settings")
}
